<%if @children.exists?%>		
<%@children.each do |child|%>	
	

		<div class="container" class="clearfix">
			<%= render partial: 'profile_index', :locals => {child: child}%>
			
	
		</div>			
	<%end%>

	<%else%>
		<div class="container" class="clearfix">
			<h2>Welcome to SproutHQ</h2>
			<h3>Get started by <%=link_to "creating your child's profile", new_child_path %></h3>
		</div>
	<%end%>